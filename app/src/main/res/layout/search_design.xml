<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_style"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/SearchDesign_image"
            android:layout_width="90sp"
            android:layout_height="90sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/user"/>

        <TextView
            android:id="@+id/SearchDesign_text"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textColor="#858080"
            android:text="kjadldas"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/SearchDesign_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/SearchDesign_add"/>

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/SearchDesign_add"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_marginRight="10sp"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>